{
  "name": "timezone-server",
  "version": "1.0.0",
  "description": "HTTP server with timezone endpoint",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "dev": "ts-node src/server.ts",
    "demo": "npm run build && node dist/demo.js",
    "demo:dev": "ts-node src/demo.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "module-alias": "^2.2.3",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-sort-class-members": "^1.20.0",
    "globals": "^15.0.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "_moduleAliases": {
    "@": "dist",
    "@shared": "dist/shared/index.js",
    "@controllers": "dist/controllers/index.js",
    "@routing": "dist/routing/index.js",
    "@services": "dist/services/index.js"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
